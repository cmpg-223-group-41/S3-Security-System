@page
@model S3_Security_System.Pages.Positions.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Position</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Position.ID" />
            <div class="form-group">
                <label asp-for="Position.PositionName" class="control-label"></label>
                <input asp-for="Position.PositionName" class="form-control" />
                <span asp-validation-for="Position.PositionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position.PositionDesc" class="control-label"></label>
                <textarea asp-for="Position.PositionDesc" class="form-control"></textarea>
                <span asp-validation-for="Position.PositionDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
